{
  "name": "xp-bot",
  "version": "9.0.0",
  "description": "The official XP Discord Bot",
  "main": "src/index.ts",
  "repository": "https://github.com/xp-bot/xp-bot.git",
  "author": "namespace.media",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/local-index.ts | pino-pretty",
    "build": "rm -rf build/ && yarn lint && tsc && cp -r src/locales/. build/locales && yarn sentry:sourcemaps",
    "start:prod": "NODE_ENV=production node build/index.js | pino-pretty",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "generate-services": "curl https://bot-staging-api.xp-bot.net/openapi.json -o ./openapi.json && openapi --input ./openapi.json --output ./src/api/generated --request ./src/api/overrides/request.ts --client axios --useOptions",
    "generate-services:local": "openapi --input ./openapi.json --output ./src/api/generated --request ./src/api/overrides/request.ts --client axios --useOptions",
    "translate": "i18nexus pull -k 6WtsUiuNBRFehb7Z1biZFg -p src/locales",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org namespacemedia --project node ./build && sentry-cli sourcemaps upload --org namespacemedia --project node ./build"
  },
  "dependencies": {
    "@sentry/cli": "^2.21.5",
    "@sentry/node": "^7.80.1",
    "@sentry/profiling-node": "^1.2.6",
    "@types/node": "^20.8.9",
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "i18next": "^23.6.0",
    "i18next-http-backend": "^2.3.1",
    "i18next-resources-to-backend": "^1.1.4",
    "i18nexus-cli": "^3.3.0",
    "lodash": "^4.17.21",
    "openapi-typescript-codegen": "^0.25.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.200",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1"
  }
}
