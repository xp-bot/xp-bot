{
  "name": "xp-bot",
  "version": "9.0.0",
  "description": "The official XP Discord Bot",
  "main": "src/index.ts",
  "repository": "https://github.com/xp-bot/xp-bot.git",
  "author": "namespace.media",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/index.ts | pino-pretty",
    "build": "yarn lint && tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "generate-services": "curl http://xp-bot.net:3001/openapi.json -o ./openapi.json && openapi --input ./openapi.json --output ./src/api/generated --request ./src/api/generator-overrides/request.ts --client axios --useOptions",
    "generate-services:local": "curl http://localhost:3001/openapi.json -o ./openapi.json && openapi --input ./openapi.json --output ./src/api/generated --request ./src/api/overrides/request.ts --client axios --useOptions",
    "translate": "i18nexus pull -k $(grep I18N_TOKEN .env | cut -d '=' -f2) -p src/locales"
  },
  "dependencies": {
    "@types/node": "^20.8.9",
    "axios": "^1.6.0",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "i18next": "^23.6.0",
    "i18next-http-backend": "^2.3.1",
    "i18next-resources-to-backend": "^1.1.4",
    "i18nexus-cli": "^3.3.0",
    "lodash": "^4.17.21",
    "openapi-typescript-codegen": "^0.25.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.200",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1"
  }
}
